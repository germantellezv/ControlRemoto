<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/ButtonConnect"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="43dp"
            android:text="@string/BtnConectar"
            app:layout_constraintBottom_toTopOf="@+id/btnAjustes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="201dp"
            android:layout_height="74dp"
            android:gravity="center"
            android:text="@string/TvBienvenido"
            android:textSize="24sp" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="217dp"
            tools:layout_editor_absoluteX="105dp"/>

    <Button
            android:id="@+id/btnAjustes"
            android:layout_width="139dp"
            android:layout_height="35dp"
            android:text="@string/BtnAjustes"
            android:textSize="12sp" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="348dp"
            tools:layout_editor_absoluteX="136dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>